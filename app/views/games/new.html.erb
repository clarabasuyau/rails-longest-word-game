<h1> New game </h1>

<div class="letters">
<% @letters.each do |letter| %>
<div class="letter"> <%= letter %> </div>
<% end %>
</div>

<p>What is the longest word you can find?</p>
<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input class="input" type="text" name="words">
  <input class="input" type="hidden" name="letters" value="<%= @letters %>">
  <input class="play" type="submit" value="Play">
</form>
